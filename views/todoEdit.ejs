    <h1>Edit task</h1>
    <form action="" id="todoForm" >
        <div class="form-group">
            <label for="taskTitle">Title</label>
            <input type="text" name="taskTitle" class="form-control" placeholder="Add title..." value="<%= todo.taskTitle %>" >
